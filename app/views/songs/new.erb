<h1>New Song</h1>


<br></br>

<form action='/songs' method="POST">
  <label>Title:</label>
  <input type="text" name='song[name]'>
  <br></br>
  <label>Select artist:</label>
  <br></br>
<%@artists.each do |artist|%>
  <input type='radio' name='song[artist]' id='<%=artist.id%>' value='<%=artist.id%>'><%=artist.name%>
  <br></br>
  <%end%>
  <label>New artist:</label>  <br></br>
  <input type='text' name='song[artist][name]' value='name'>
  <br></br>

  <label>Select genre:</label>
  <br></br>
<%@genres.each do |genre|%>
  <input type='checkbox' name='song[genres][]' id='<%=genre.id%>' value='<%=genre.id%>'><%=genre.name%>
  <br></br>
  <%end%>
  <label>New genre:</label>  <br></br>
  <input type='text' name='song[new_genre]' value='name'>
  <br></br>

  <input type='submit'>
